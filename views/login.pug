extends ../layout/commonLayout

block content

  h1 Login Page
  br
  br
  if errors
      each error in errors
        .alert.alert-danger= error
  form(action="/login" method="POST" )
    label(for="email") Email
    input#email.form-control.ml-2.mr-2(type="email" name="title" value = values ? values.title : ''  placeholder="enter email here.")
    br
    br
    label(for="password") Password
    input#password.form-control.ml-2.mr-2(type="text" name="description" value = values ? values.description : ''  placeholder='Enter password here')
    br
    br
    button.btn.btn-primary.ml-2 Login
  