extends home
  
block headbar
  br
  br
  .container
      .row.justify-content-md-center
        .col-8
          br  
          br
          br
          
          form(action="/auth/login", method="POST")
            .form-group
              label Email
              input.form-control(type="text", name="email", placeholder='Enter email', value = values? values.email : '')
            .form-group
              label Password
              input.form-control(type="password", name="password", placeholder='Enter password', value = values? values.password : '')

            if errors
              each error in errors
                .alert.alert-danger= error

            button.btn.btn-primary Login
