extends index

block headbar
  label Create new user:
    br
    form(action="/users/create" method="POST" enctype="multipart/form-data")
      label.ml-4(for="name") Name:
      input#name.form-control.ml-4(type="text" name="name" placeholder="Enter user name...")
      label.ml-4(for="avatar") Avatar:
      input#avatar.form-control-file.ml-4(type="file" name="avatar")
      button.btn.btn-primary.ml-2.mt-3 Add
      if errors
              each error in errors
                .alert.alert-danger= error
  h1 List users:
  br
  br
  table.table
        th Index
        th Avtar
        th User Id
        th User Name
        th Change
        each user,index in users
          tr 
            td=index+1
            td
              if user.avtar
               img(src=user.avatar, width="32")
              else
               img(src="https://cdn.glitch.com/e3606d21-c6e3-4a31-ae27-7fbbf6be0c66%2Ffavicon.png", width="32")
            td=user.id
            td=user.name
            td
              span
               |
               |
               a(href="/users/" +user.id+ "/edit-user") Edit
               |
               |
               a(href="/users/" +user.id+ "/delete") Delete